<div id="linkedbtn">
    <a href="your linked in" target="_blank">
      <button id="waveButton" class="relative overflow-hidden bg-white font-poppins rounded-full py-3 px-8 mt-10 hover-effect" style="color: #6E744C">
        Find mig p√• LinkedIn!
        <span class="liquid"></span>
      </button>
    </a>
</div>
  
  

<style>
#linkedbtn {
  display: inline-block;
}

.hover-effect {
  position: relative;
  display: inline-block;
  z-index: 1;
  transition: color 0.5s ease;
  overflow: hidden;
}

.hover-effect:hover {
  color: white;
}

.liquid {
  position: absolute;
  bottom: -100%; /* Starts below the button */
  left: 50%;
  width: 200%;
  height: 300%;
  background: #6E744C;
  z-index: -1;
  border-radius: 45%;
  transform-origin: center;
  pointer-events: none;
  transition: transform 1s ease, left 0.3s ease; /* Smooth fill and mouse tracking */
}

.hover-effect:hover .liquid {
  transform: translateY(-100%); /* Fill up on hover */
}

.liquid.leave {
  transition: transform 1.5s ease; /* Slow disappearance */
  transform: translateY(100%); /* Move liquid down on mouse leave */
}

</style>

<script>
const button = document.querySelector('#waveButton');
const liquid = button.querySelector('.liquid');

// Mouse move effect to adjust liquid horizontally based on mouse position
button.addEventListener('mousemove', (e) => {
  const rect = button.getBoundingClientRect();
  const mouseX = e.clientX - rect.left;
  const offsetX = (mouseX / button.offsetWidth) * 100;

  liquid.style.left = `${offsetX}%`; // Move the liquid horizontally
});

// Mouse enter: trigger liquid filling
button.addEventListener('mouseenter', () => {
  liquid.classList.remove('leave');
  liquid.style.transform = 'translateY(-100%)'; // Liquid fills up
});

// Mouse leave: trigger liquid disappearing
button.addEventListener('mouseleave', () => {
  liquid.classList.add('leave');
  liquid.style.transform = 'translateY(100%)'; // Liquid moves down and disappears
});

</script>