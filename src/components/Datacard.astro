---
const { imageSrc, altText, headline, paragraphText } = Astro.props;
---

<div
  class="w-[300px] h-[300px] flex flex-col items-center justify-center p-4
    sm:w-[275px] sm:h-[350px]
    md:w-[300px] md:h-[400px]
    lg:w-[325px] lg:h-[450px]"
>
  <div
    class="w-[80px] h-[80px] sm:w-[90px] sm:h-[90px] md:w-[100px] md:h-[100px] lg:w-[120px] lg:h-[120px]
                bg-white bg-opacity-20 flex items-center justify-center mb-4 rounded-full"
  >
    <img src={imageSrc} alt={altText} class="w-full h-full" />
  </div>

  <h2
    class="text-seasalt text-base sm:text-lg md:text-xl font-semibold mb-2 text-center"
  >
    {headline}
  </h2>

  <p
    class="text-seasalt text-center max-w-[200px] sm:max-w-[225px] md:max-w-[250px]"
  >
    {paragraphText}
  </p>
</div>
