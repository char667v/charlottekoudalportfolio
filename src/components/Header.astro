---
import Primarybtn from "../components/Primarybtn.astro";
---

<!-- Navbar --><!doctype html>
<html lang="da">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Responsiv Header Menu</title>
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer
    ></script>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <!-- Header -->
    <header
      x-data="{ showMenu: false }"
      class="fixed top-0 left-0 w-full bg-primary shadow-md z-50"
    >
      <div
        class="flex justify-between items-center max-w-7xl mx-auto px-4 py-4"
      >
        <!-- Logo -->
        <a href="/">
          <div id="logo" class="flex items-center">
            <img src="/svg/logo.png" alt="Hjem" class="h-14" />
          </div>
        </a>

        <!-- Desktop Menu (kun synlig på store skærme) -->
        <nav class="hidden lg:flex space-x-12 ml-6">
          <a
            href="/"
            class="text-seasalt font-bold uppercase hover:text-accent transition"
            >Hjem</a
          >
          <a
            href="/howto"
            class="text-seasalt font-bold uppercase hover:text-accent transition"
            >How to</a
          >
          <a
            href="/ressourcer"
            class="text-seasalt font-bold uppercase hover:text-accent transition"
            >Ressourcer</a
          >
        </nav>

        <div class="hidden lg:block ml-auto">
          <Primarybtn btnText="Registrer" link="/forms" />
        </div>

        <!-- Burger Menu Knappen til mobil -->
        <button
          @click="showMenu = !showMenu"
          class="lg:hidden text-seasalt focus:outline-none ml-4"
        >
          <!-- Ikon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>

      <!-- Mobil Menu (vises når showMenu er true) -->
      <nav
        x-show="showMenu"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 transform scale-95"
        x-transition:enter-end="opacity-100 transform scale-100"
        x-transition:leave="transition ease-in duration-300"
        x-transition:leave-start="opacity-100 transform scale-100"
        x-transition:leave-end="opacity-0 transform scale-95"
        class="lg:hidden bg-primary w-full py-4"
      >
        <ul class="flex flex-col items-center space-y-4">
          <li>
            <a
              href="/"
              class="text-seasalt font-bold uppercase hover:text-accent transition"
              >Hjem</a>
          </li>
          <li>
            <a
              href="/howto"
              class="text-seasalt font-bold uppercase hover:text-accent transition"
              >How to</a>
          </li>
          <li>
            <a
              href="/ressourcer"
              class="text-seasalt font-bold uppercase hover:text-accent transition"
              >Ressourcer</a>
          </li>
          <Primarybtn btnText="Registrer" link="/forms" />
        </ul>
      </nav>
    </header></body>
</html>
